---
import { site } from "../site.config";
import ThemeToggle from "./ThemeToggle.astro";
const base = import.meta.env.BASE_URL;
---
<header class="container-blog py-6">
  <div class="flex items-center justify-between">
    <a href={base} class="text-xl font-extrabold no-underline text-[var(--color-text)] hover:text-[var(--color-accent)] transition-colors">
      {site.title}
    </a>
    <div class="flex items-center gap-1 sm:gap-2">
      <nav class="flex items-center gap-3 sm:gap-4 text-sm font-medium">
        <a href={`${base}blog/`} class="no-underline text-[var(--color-text-secondary)] hover:text-[var(--color-text)] transition-colors">Blog</a>
        <a href={`${base}resume/`} class="no-underline text-[var(--color-text-secondary)] hover:text-[var(--color-text)] transition-colors">Resume</a>
        <a href={`${base}search/`} class="no-underline text-[var(--color-text-secondary)] hover:text-[var(--color-text)] transition-colors">Search</a>
        <a href={`${base}rss.xml`} class="no-underline text-[var(--color-text-secondary)] hover:text-[var(--color-text)] transition-colors">RSS</a>
      </nav>
      <ThemeToggle />
    </div>
  </div>
</header>
