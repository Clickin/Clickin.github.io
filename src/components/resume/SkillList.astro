---
interface Props {
  title: string;
  items: string[];
}

const { title, items } = Astro.props;
---

<div>
  <h3 class="font-semibold mb-2 text-[var(--color-text)]">{title}</h3>
  <div class="flex flex-wrap gap-2">
    {items.map((item) => (
      <span class="px-3 py-1 rounded-md bg-[var(--color-bg-secondary)] text-sm border border-[var(--color-border)]">
        {item}
      </span>
    ))}
  </div>
</div>
