---
import "../styles/global.css";
import Header from "../components/Header.astro";
import SeoHead from "../components/SeoHead.astro";
import { site as siteCfg } from "../site.config";
const { title, description, canonical, ogImage, mainClass = "container-blog" } = Astro.props;
const siteUrl = Astro.site ?? Astro.url;
const baseUrl = new URL(import.meta.env.BASE_URL, siteUrl);
const sitemapUrl = new URL("sitemap-index.xml", baseUrl).href;
const pathWithoutTrailingSlash = Astro.url.pathname.replace(/\/+$/, "") || "/";
const defaultOgImage = `/og${pathWithoutTrailingSlash === "/" ? "/index" : pathWithoutTrailingSlash}.png`;
const resolvedOgImage = ogImage ?? defaultOgImage;
const gaMeasurementId = import.meta.env.PUBLIC_GA_MEASUREMENT_ID;
const hasGaMeasurementId = typeof gaMeasurementId === "string" && gaMeasurementId.length > 0;
---
<!doctype html>
<html lang={siteCfg.language}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500&display=swap"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500&display=swap"
        rel="stylesheet"
      />
    </noscript>
    <link rel="sitemap" type="application/xml" href={sitemapUrl} />
    <title>{title ? `${title} — ${siteCfg.title}` : siteCfg.title}</title>
    <SeoHead title={title} description={description} canonical={canonical} ogImage={resolvedOgImage} />
    <!-- Inline theme init to prevent FOUC -->
    <script is:inline>
      (function(){
        var t=localStorage.getItem("theme");
        if(t==="dark"||(t!=="light"&&window.matchMedia("(prefers-color-scheme:dark)").matches)){
          document.documentElement.classList.add("dark");
        }
      })();
    </script>
    {
      hasGaMeasurementId && (
        <>
          <script async src={`https://www.googletagmanager.com/gtag/js?id=${gaMeasurementId}`}></script>
          <script is:inline define:vars={{ gaMeasurementId }}>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag("js", new Date());
            gtag("config", gaMeasurementId);
          </script>
        </>
      )
    }
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />
    <main class={`${mainClass} flex-1 py-8`} data-pagefind-body>
      <slot />
    </main>
    <footer class="container-blog py-8 text-center text-sm text-[var(--color-text-secondary)] border-t border-[var(--color-border)]">
      <div class="mb-2">
        &copy; {new Date().getFullYear()} {siteCfg.author}. Built with
        <a href="https://astro.build" class="text-[var(--color-link)] hover:text-[var(--color-link-hover)]">Astro</a>.
      </div>
      <div class="flex items-center justify-center gap-3">
        <a href="/policy/privacy" class="text-[var(--color-link)] hover:text-[var(--color-link-hover)]">개인정보처리방침</a>
        <span aria-hidden="true">|</span>
        <a href="/policy/terms" class="text-[var(--color-link)] hover:text-[var(--color-link-hover)]">이용약관</a>
      </div>
    </footer>
  </body>
</html>
