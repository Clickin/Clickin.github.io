---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import { postUrl } from "../../lib/slug";
const posts = (await getCollection("posts", ({ data }) => !data.draft && data.publish !== false))
  .sort((a, b) => (b.data.updated ?? b.data.date).valueOf() - (a.data.updated ?? a.data.date).valueOf());
---
<BaseLayout title="Blog" description="All posts">
  <h1 class="text-3xl sm:text-4xl font-extrabold mb-8">Blog</h1>

  <div class="flex flex-col gap-4">
      {posts.map((p) => (
        <a
          href={postUrl(p.slug)}
          class="group block p-5 rounded-xl border border-[var(--color-border)] bg-[var(--color-bg-secondary)] no-underline hover:border-[var(--color-accent)]/40 transition-all duration-200"
        >
          <div class="flex items-start justify-between gap-4">
            <div class="min-w-0">
              <h2 class="text-lg font-semibold text-[var(--color-text)] group-hover:text-[var(--color-accent)] transition-colors !mt-0 !mb-1">
                {p.data.title}
              </h2>
              {p.data.description && (
                <p class="text-sm text-[var(--color-text-secondary)] line-clamp-2 !my-0">
                  {p.data.description}
                </p>
              )}
            </div>
            <time class="text-xs text-[var(--color-text-secondary)] whitespace-nowrap pt-1" datetime={p.data.date.toISOString()}>
              {p.data.date.toISOString().slice(0, 10)}
            </time>
          </div>
          <div class="flex items-center gap-2 mt-3">
            <span class="text-xs px-2 py-0.5 rounded-full bg-[var(--color-tag-bg)] text-[var(--color-tag-text)]">
              {p.data.category}
            </span>
            {p.data.tags.map((tag: string) => (
              <span class="text-xs text-[var(--color-text-secondary)]">#{tag}</span>
            ))}
          </div>
        </a>
      ))}
    </div>
</BaseLayout>
